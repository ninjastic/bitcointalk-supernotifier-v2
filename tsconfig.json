{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2020"
      ],
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "outDir": "./dist",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true
   },
   "exclude": [
      "node_modules",
      "__tests__"
   ]
}