{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2022"
      ],
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "paths": {
         "##/*": ["./*"],
      }
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}