{
   "compilerOptions": {
      "lib": [
         "ESNext",
      ],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "paths": {
         "##/*": ["./*"],
      }
   },
   "include": ["src/**/*.ts", "scripts/*.ts"],
   "exclude": ["node_modules"],
}