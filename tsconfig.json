{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2020"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true
   }
}