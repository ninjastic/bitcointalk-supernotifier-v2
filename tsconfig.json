{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "##/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "scripts/*.ts"],
  "exclude": ["node_modules"]
}
